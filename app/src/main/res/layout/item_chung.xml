<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardElevation="8dp"
    cardview:cardCornerRadius="14dp"
    android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="17dp"
        android:background="@color/white">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_chung_gui_1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            cardview:layout_constraintGuide_percent="0.81"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_chung_gui_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            cardview:layout_constraintGuide_percent="0.01"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_chung_gui_3"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            cardview:layout_constraintGuide_percent="0.61" />
        <TextView
            android:id="@+id/item_chung_tv_ma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="CP17315"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/cantata_one"
            cardview:layout_constraintEnd_toStartOf="@id/item_chung_linearLayout_tinChi"
            android:gravity="left"
            cardview:layout_constraintStart_toEndOf="@+id/item_chung_tv_STT"
            cardview:layout_constraintTop_toTopOf="parent"
            android:textColor="#7113E8"/>

        <TextView
            android:textColor="#7113E8"
            android:fontFamily="@font/cantata_one"
            android:id="@+id/item_chung_tv_STT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            cardview:layout_constraintStart_toEndOf="@id/item_chung_gui_2"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginEnd="5dp"
            android:id="@+id/item_chung_tv_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantata_one"
            android:text="Lập trình Mobile"
            android:textColor="#7113E8"
            android:textSize="13sp"
            cardview:layout_constraintEnd_toStartOf="@id/item_chung_linearLayout_tinChi"
            android:gravity="left"
            cardview:layout_constraintStart_toEndOf="@id/item_chung_gui_2"
            cardview:layout_constraintTop_toBottomOf="@+id/item_chung_tv_STT" />
        
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_chung_btnImg_xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/delete_33"
            cardview:layout_constraintStart_toEndOf="@id/item_chung_gui_1"
            cardview:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_chung_btnImg_sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/edit_33"
            cardview:layout_constraintStart_toEndOf="@id/item_chung_btnImg_xoa"
            cardview:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/item_chung_linearLayout_tinChi"
            android:layout_width="0dp"
            cardview:layout_constraintEnd_toStartOf="@id/item_chung_gui_1"
            cardview:layout_constraintStart_toEndOf="@id/item_chung_gui_3"
            cardview:layout_constraintTop_toBottomOf="@id/item_chung_tv_ma"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantata_one"
                android:text="Tín Chỉ: "
                android:textColor="#3F51B5"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/item_chung_tv_tinChi"
                android:fontFamily="@font/cantata_one"
                android:textSize="13sp"
                android:textColor="#3F51B5"
                android:text="3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>