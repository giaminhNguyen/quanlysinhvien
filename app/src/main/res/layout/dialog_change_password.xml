<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_1"
            android:orientation="vertical"
            android:paddingTop="17dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:layout_editor_absoluteX="20dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/orienta"
                android:text="Mật khẩu cũ  "
                android:drawableRight="@drawable/key_20"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_change_password_et_matKhauCu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:text="Mật khẩu mới  "
                android:fontFamily="@font/orienta"
                android:drawableRight="@drawable/lock_20"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/dialog_change_password_et_matKhauMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_1"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/orienta"
                android:drawableRight="@drawable/lock_20"
                android:text="Nhập lại mật khẩu  "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_change_password_et_NhapLaiMatKhauMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textColor="@color/custom_text_focus_1"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="3"
            android:layout_marginTop="-25dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="16dp">
            <androidx.appcompat.widget.AppCompatButton
                android:paddingStart="10dp"
                android:id="@+id/dialog_change_password_btn_sua"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="14dp"
                android:layout_weight="1.3"
                android:background="@drawable/btn_2"
                android:text="Sửa"
                android:drawableLeft="@drawable/fix_30"
                android:textColor="#030F87"
                android:fontFamily="@font/cantata_one"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/dialog_change_password_btnImg_huy"
        android:layout_marginStart="-30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cancel_40"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@null"/>
</FrameLayout>