<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment_ThemSinhVien"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/frag_them_sinh_vien_sp_maLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black"/>
            <EditText
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_2"
                android:padding="10dp"
                android:background="@drawable/custom_et_2"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="Tên Sinh Viên"
                android:id="@+id/frag_them_sinh_vien_et_tenSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="10dp"
                android:background="@drawable/custom_et_2"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_2"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="Mã Sinh Viên"
                android:id="@+id/frag_them_sinh_vien_et_MSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="10dp"
                android:background="@drawable/custom_et_2"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_2"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:hint="Số Điện Thoại"
                android:id="@+id/frag_them_sinh_vien_et_SDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới Tính"
                    android:textSize="24sp"
                    android:layout_marginEnd="20dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <RadioButton
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:checked="true"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/frag_them_sinh_vien_rdo_nam"/>
                    <RadioButton
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:textSize="22sp"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:id="@+id/frag_them_sinh_vien_rdo_nu"/>
                </RadioGroup>
            </LinearLayout>
            <EditText
                android:padding="10dp"
                android:background="@drawable/custom_et_2"
                android:textStyle="bold"
                android:textColor="@color/custom_text_focus_2"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="21sp"
                android:hint="Ngày Sinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:id="@+id/frag_them_sinh_vien_et_ngaySinh"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/cantata_one"
                android:textColor="#E0F2F1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/add_34"
                android:text="Thêm"
                android:background="@drawable/btn_4"
                android:textSize="22sp"
                android:id="@+id/frag_them_sinh_vien_btn_them"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_them_sinh_vien_rv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:text="Trở Về"
            android:id="@+id/frag_them_sinh_vien_btn_troVe"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:drawableLeft="@drawable/arrow_left_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>