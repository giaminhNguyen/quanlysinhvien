<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_lop_hoc_tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/corner_16"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Lớp Học"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/dialog_lop_hoc_tv_title"
            tools:layout_editor_absoluteX="20dp"
            android:paddingBottom="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cantata_one"
                android:text="Mã Lớp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_lop_hoc_et_maLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                app:backgroundTint="#3F51B5"
                android:textColor="@color/custom_text_focus_1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/cantata_one"
                android:text="Chuyên Ngành"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Spinner
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/dialog_lop_hoc_sn_chuyenNganh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="3"
            android:layout_marginTop="-25dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="16dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_lop_hoc_btn_themSua"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="14dp"
                android:layout_weight="1.7"
                android:background="@drawable/btn_2"
                android:text="Thêm"
                android:textColor="#030F87"
                android:fontFamily="@font/cantata_one"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/dialog_lop_hoc_btnImg_huy"
        android:layout_marginStart="-30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cancel_40"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@null"/>
</FrameLayout>
